{
	"name": "all1n.dev",
	"type": "module",
	"version": "0.0.1",
	"engines": {
		"node": ">=24.0.0",
		"npm": ">=11.0.0"
	},
	"scripts": {
		"dev": "astro dev",
		"start": "astro dev",
		"generate-resume-html": "resumed render --theme jsonresume-theme-even --output=public/resume.html public/resume.json",
		"generate-resume-pdf": "resumed export --puppeteer-arg=\"--no-sandbox\" --theme jsonresume-theme-even --output=public/resume.pdf public/resume.json",
		"generate-resume": "npm run generate-resume-html && npm run generate-resume-pdf",
		"build": "astro check && tsc --noEmit && astro build",
		"prebuild": "npm run generate-resume",
		"preview": "astro preview",
		"astro": "astro",
		"prepare": "husky",
		"postinstall": "npx tsx scripts/stats-fetch.ts"
	},
	"dependencies": {
		"@allindevelopers/prettier-config": "^1.1.0",
		"@astrojs/check": "^0.9.6",
		"@astrojs/react": "^4.4.2",
		"@commitlint/cli": "^20.2.0",
		"@commitlint/config-conventional": "^20.2.0",
		"@heroicons/react": "^2.2.0",
		"@playform/inline": "^0.1.2",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/js-yaml": "^4.0.9",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"astro": "^5.16.4",
		"cheerio": "^1.1.2",
		"domhandler": "^5.0.3",
		"gray-matter": "^4.0.3",
		"husky": "^9.1.7",
		"js-yaml": "^4.1.1",
		"jsonresume-theme-even": "^0.26.1",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"puppeteer": "24.32.0",
		"react": "^19.2.1",
		"react-activity-calendar": "^3.0.1",
		"react-dom": "^19.2.1",
		"resumed": "^6.1.0",
		"tailwindcss": "^4.1.4",
		"tailwindcss-animated": "^2.0.0",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"scripts/contributions/*.json": "npx tsx scripts/l10n-sort.ts",
		"*": "npx prettier --write --ignore-unknown"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
